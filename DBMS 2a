CREATE TABLE Borrower (
    Roll_no      NUMBER(5) PRIMARY KEY,
    Name         VARCHAR2(50) NOT NULL,
    BookName     VARCHAR2(100),
    DateOfIssue  DATE,
    Status       CHAR(1) CHECK (Status IN ('I','R'))
);


